{% if location is not defined %}
    {% set location = 'home' %}
{% endif %}
<!DOCTYPE html>
<html lang="en-GB">
    <head>
        <meta charset="utf-8">
        <!--
           ____                   __   ______             __
          / __/__ ____  ___ __ __/ /  / __/ /  ___  ___  / /__ ___
         / _// _ `/ _ \(_-</ // / _ \/ _// _ \/ _ \/ _ \/  '_/(_-<
        /_/  \_,_/_//_/___/\_,_/_.__/___/_.__/\___/\___/_/\_\/___/

        All FansubEbooks code is open source under Creative Commons Attribution 4.0 International license
        Code available at: https://github.com/johnnoel/fansubebooks.chaostangent.com
        -->
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        {% block head %}{% endblock %}

        <title>{% block title %}{% endblock %}{% if block('title') is not empty %} : {% endif %}Fansub Ebooks</title>

        <link rel="apple-touch-icon" sizes="57x57" href="{{ asset('img/favicon/apple-icon-57x57.png') }}">
        <link rel="apple-touch-icon" sizes="60x60" href="{{ asset('img/favicon/apple-icon-60x60.png') }}">
        <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('img/favicon/apple-icon-72x72.png') }}">
        <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('img/favicon/apple-icon-76x76.png') }}">
        <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('img/favicon/apple-icon-114x114.png') }}">
        <link rel="apple-touch-icon" sizes="120x120" href="{{ asset('img/favicon/apple-icon-120x120.png') }}">
        <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('img/favicon/apple-icon-144x144.png') }}">
        <link rel="apple-touch-icon" sizes="152x152" href="{{ asset('img/favicon/apple-icon-152x152.png') }}">
        <link rel="apple-touch-icon" sizes="180x180" href="/{{ asset('img/faviconapple-icon-180x180.png') }}">
        <link rel="icon" type="image/png" sizes="192x192" href="{{ asset('img/favicon/android-icon-192x192.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('img/favicon/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="96x96" href="{{ asset('img/favicon/favicon-96x96.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('img/favicon/favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('manifest.json') }}">
        <meta name="msapplication-TileColor" content="#D54000">
        <meta name="msapplication-TileImage" content="{{ asset('img/favicon/ms-icon-144x144.png') }}">
        <meta name="theme-color" content="#D54000">

        <meta name="twitter:widgets:theme" content="light">
        <meta name="twitter:widgets:link-color" content="#D54000">
        <meta name="twitter:widgets:border-color" content="#C4C4C4">

        <link rel="search" type="application/opensearchdescription+xml" href="{{ url('search_opensearch') }}" title="fansubebooks.chaostangent.com">

        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <script src="{{ asset('js/head.js') }}"></script>
    </head>
    <body{% if location == 'home' %} class="home"{% endif %}>
        <a id="skip-to" class="visuallyhidden focusable" href="#content">Skip to content</a>

        <header id="header">
            <div id="header-inner" class="container">
                <a href="{{ path('home') }}" class="marque">fansub<span>ebooks</span></a>
                <nav class="navbar">
                    <button type="button" class="navbar-menu" id="menu">Show menu</button>
                    <ul>
                        <li{% if location == 'home' %} class="on"{% endif %}><a href="{{ path('home') }}">Home</a></li>
                        <li{% if location == 'tweets' %} class="on"{% endif %}><a href="{{ path('tweets') }}">Tweets</a></li>
                        <li{% if location == 'popular' %} class="on"{% endif %}><a href="{{ path('popular') }}">Popular</a></li>
                        <li{% if location == 'series' %} class="on"{% endif %}><a href="{{ path('series') }}">Explore</a></li>
                        <li><a href="{{ path('random') }}">Random</a></li>
                        <li{% if location == 'help' %} class="on"{% endif %}><a href="{{ path('help') }}">Help</a></li>
                        <li{% if location == 'search' %} class="on"{% endif %}><a href="{{ path('search') }}">Search</a></li>
                    </ul>
                </nav>
            </div>

            {% block header %}{% endblock %}
        </header>

        <main id="content">
            {% block body %}{% endblock %}
        </main>

        <footer id="footer" class="container">
            Fansub Ebooks is too silly to copyright. Those responsible include <a href="https://chaostangent.com">John &ldquo;ChaosTangent&rdquo; Noel</a>.
        </footer>

        {% block javascripts %}{% endblock %}
    </body>
</html>
