{% extends '::layout.html.twig' %}

{% block body %}
<div class"most-recent">
    <h5>Latest tweet</h5>
    {% if latest_tweet %}
    {{ latest_tweet.line.line }}
    <time datetime="">{{ latest_tweet.tweeted|date('Y-m-d H:i') }}</time>
    {% else %}
    <p>Could not access latest tweet</p>
    {% endif %}
</div>

<div class="stats">
    <h5>TWEETS</h5>
    <p>{{ tweet_count|number_format }}</p>
    <h5>LINES</h5>
    <p>{{ line_count|number_format }}</p>
</div>

<div class="upcoming">
</div>

<div class="browse-by">
    <a href="{{ path('series') }}">Series</a>
    <a href="{{ path('search') }}">Search</a>
</div>
{% endblock %}
